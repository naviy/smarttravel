@using Luxena
@using Luxena.Domain.Views
@{
    Layout = "~/app/Layouts/ViewLayout.cshtml";
    ViewBag.ViewName = "index";

    var v = new ViewDomain();
}

<div class="main-tab-container">
    <br />
    <br />
    <div class="row">
        <div class="col-lg-offset-2 col-lg-4">
        </div>

        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Справочники</h3>
                </div>
                @*                <div class="panel-body">*@
                @*                    Panel content*@
                @*                </div>*@

                @Item(v.Organization, "#/organizationList")
                @Item(v.Person, "#/personList")

            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    @section title { '<div class="main-tab-title"><i class="fa fa-home"></i></div>' }

    @section Tooltip { '<b>Luxena Travel</b><br>Выбираем, не стесняемся' }

    @section Controller {
    function MainPageCtrl($scope)
    {
        $scope.viewPage.closable = false;
    }
    }

</script>



@helper Item(ViewEntity v, string url)
{
    <div class="list-group">
        <a href="@url" class="list-group-item">
            <div class="row">
                <div class="col-lg-2 text-center" style="padding-top: 0.2em">
                    @if (v.icon.Yes())
                    {
                        <i class="@v.CssIcon() fa-2x"></i> 
                    }
                </div>
                <div class="col-lg-10">
                    <h4 class="list-group-item-heading">
                        @v.title.Names
                    </h4>
                    <p class="list-group-item-text">@v.description</p>
                </div>
            </div>
        </a>
    </div>
}